@model Ejercicio.ABC.Data.Models.Proveedor

@{
    ViewBag.Title = "Agregar Proveedor";
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

<div class="page-header">
    <h1>Crear Proveedor</h1>
</div>
@using (Html.BeginForm("Guardar", "Proveedor", FormMethod.Post)) 
{
    @Html.AntiForgeryToken()
    <br />
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-sm-2">RFC:</label>
            <div class="col-sm-10">
                @Html.EditorFor(model => model.RFC, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.RFC, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-sm-2">Nombre:</label>
            <div class="col-sm-10">
                @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Crear" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div class="col-md-12">
    <button onclick="location.href='@Url.Action("Index", "Proveedor")'" type="button" class="btn btn-primary"><span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span> Regresar</button>
</div>